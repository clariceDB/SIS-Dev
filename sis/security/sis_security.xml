<?xml version="1.0" ?>
<odoo>
  <record id="module_sis_category" model="ir.module.category">
    <field name="name">SIS</field>
  </record>

  <!-- Student -->
  <record id="student_group_user" model="res.groups">
    <field name="name">Student</field>
    <field name="category_id"
           ref="module_sis_category"/>
    <field name="implied_ids"
           eval="[(4, ref('base.group_user'))]"/>
  </record>

  <!-- System Admin -->
  <record id="system_admin" model="res.groups">
    <field name="name">SysAdmin</field>
    <field name="category_id"
           ref="module_sis_category"/>
    <field name="implied_ids"
           eval="[(4, ref('student_group_user'))]"/>
    <field name="users"
           eval="[(4, ref('base.user_root')),
                  (4, ref('base.user_admin'))]"/>
  </record>

    <data noupdate="1">
    <record id="sis_user_rule" model="ir.rule">
      <field name="name">SIS User accesses</field>
      <field name="model_id" ref="model_sis_student"/>
      <field name="domain_force">
          [('active','=',True)]
      </field>
      <field name="groups" eval="[(4,ref('student_group_user'))]"/>
    </record>
  </data>

</odoo>


