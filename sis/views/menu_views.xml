<?xml version="1.0"?>
<odoo>
    <menuitem id="sis_menu"
              name="Student Information System" />

    <!--Student-->
    <act_window id="action_student"
      name="Student"
      res_model="sis.student"
      view_mode="tree,form"
	/>

    <menuitem id="menu_student"
              name="Student"
              parent="sis_menu"
              action="action_student"
    />

    <!--Programme-->
    <act_window id="action_add_programme"
      name="Programmes"
      res_model="sis.programme"
      view_mode="tree,form"
	/>

    <menuitem id="menu_view_form_add_programme"
              name="Programmes"
              action="action_add_programme"
              parent="sis_menu"
              />

    <!--Lecturer-->
    <act_window id="action_lecturer"
      name="Lecturer"
      res_model="sis.lecturer"
      view_mode="tree,form"
	/>

    <menuitem id="menu_lecturer"
              name="Lecturers"
              action="action_lecturer"
              parent="sis_menu"
              />
    <!--Course-->

    <act_window id="action_add_course"
      name="Courses"
      res_model="sis.course"
      view_mode="tree,form"
	/>

    <menuitem id="menu_add_course"
              name="Courses"
              action="action_add_course"
              parent="sis_menu"
              />
    <!--Marks-->
    <act_window id="action_add_marks"
      name="Marks"
      res_model="sis.marks"
      view_mode="tree,form"
	/>

    <menuitem id="menu_add_marks"
              name="Marks Upload"
              action="action_add_marks"
              parent="sis_menu"
              />

    <!-- Applications-->
    <act_window id="action_view_applications"
      name="Applications"
      res_model="sis.application"
      view_mode="tree"
	/>

    <menuitem id="menu_applications"
              name="View Applications"
              action="action_view_applications"
              parent="sis_menu"
              />
</odoo>


