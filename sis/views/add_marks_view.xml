<?xml version="1.0"?>
<odoo>
<!--Add marks view. Used to enter the marks of students-->
    <record id="view_form_add_marks" model="ir.ui.view">
        <field name="name">Course Marks</field>
        <field name="model">sis.marks</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="student" />
                    <field name="course_name" />
                    <field name="course_credits"/>
                    <field name="course_year"/>
                    <field name="result" />
                    <field name="department"/>
                </group>
            </form>
        </field>
    </record>

<!--Tree view of marks added to the system-->
    <record id="view_tree_add_marks" model="ir.ui.view">
        <field name="name">Course Marks</field>
        <field name="model">sis.marks</field>
        <field name="arch" type="xml">
            <tree>
                <field name="student" />
                <field name="course_name" />
                <field name="course_credits"/>
                <field name="course_year"/>
                <field name="result" />
                <field name="department"/>
            </tree>
        </field>
    </record>

</odoo>


