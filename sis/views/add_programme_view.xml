<?xml version="1.0"?>
<odoo>
<!--Adding a programme to the system-->
  <record id="view_form_add_programme" model="ir.ui.view">
    <field name="name">Programmes</field>
    <field name="model">sis.programme</field>
    <field name="arch" type="xml">
      <form>
        <group>
            <field name="name" />
            <field name="code" />
            <field name="credits" />
            <field name="level" />
            <field name="designation" />
            <field name="courses" />
        </group>
      </form>
    </field>
  </record>
<!--Tree view for adding programme-->
  <record id="view_tree_add_programme" model="ir.ui.view">
    <field name="name">Programme List View</field>
    <field name="model">sis.programme</field>
    <field name="arch" type="xml">
      <tree>
          <field name="name" />
          <field name="credits" />
          <field name="designation" />
      </tree>
    </field>
  </record>
</odoo>