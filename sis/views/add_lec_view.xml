<?xml version="1.0"?>
<odoo>
<!--  Create lecturer form -->
  <record id="view_form_lec" model="ir.ui.view">
    <field name="name">Staff Member Form View</field>
    <field name="model">sis.lecturer</field>
    <field name="arch" type="xml">
      <form>
        <group>
<!--  Button to create the lecturer user and add them to the system-->
          <header>
                <button name="make_lec" string="Create Lecturer" type="object"/>
            </header>
          <field name="name" />
          <field name="surname" />
          <field name="email" />
          <field name="password"/>
          <field name="id" />
          <field name="department" />
          <field name="level"/>
        </group>
      </form>
    </field>
  </record>
<!--Lecture tree view-->
  <record id="view_tree_lec" model="ir.ui.view">
    <field name="name">Staff Member List View</field>
    <field name="model">sis.lecturer</field>
    <field name="arch" type="xml">
      <tree>
          <field name="name" />
          <field name="surname" />
          <field name="email" />
      </tree>
    </field>
  </record>
</odoo>
